FROM docker.io/eclipse-temurin:24

EXPOSE 25565/tcp # Minecraft Java
EXPOSE 19132/udp # Minecraft Bedrock
EXPOSE 8100/tcp  # BlueMap

# Dependencies & Updates
RUN apt-get update \
  && apt-get upgrade -y \
  && apt-get install -y \
  sqlite3 \
  libsqljet-java \
  libxerial-sqlite-jdbc-java

# Server directory
RUN mkdir /app

# Server file
copy server.jar /paper.jar

# Plugins
COPY plugins /plugins

# Entrypoint
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh
ENTRYPOINT ["sh", "/entrypoint.sh"]
